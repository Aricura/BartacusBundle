<container xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="Bartacus\Bundle\BartacusBundle\CacheWarmer\ContentElementCacheWarmer">
            <argument type="service" id="Bartacus\Bundle\BartacusBundle\ContentElement\ContentElementConfigLoader" />
            <tag name="kernel.cache_warmer" />
        </service>

        <service id="Bartacus\Bundle\BartacusBundle\ContentElement\ContentElementConfigLoader">
            <argument type="service" id="service_container" />
            <argument>%jms_di_extra.bundles%</argument>
            <argument>%kernel.cache_dir%</argument>
            <argument>%kernel.debug%</argument>
        </service>

        <service id="Bartacus\Bundle\BartacusBundle\ContentElement\Loader\AnnotationBundleLoader" public="true">
            <argument type="service" id="file_locator" />
            <argument type="service" id="Bartacus\Bundle\BartacusBundle\ContentElement\Loader\AnnotationClassLoader" />
        </service>

        <service id="Bartacus\Bundle\BartacusBundle\ContentElement\Loader\AnnotationClassLoader">
            <argument type="service" id="annotation_reader" />
        </service>

        <service id="Bartacus\Bundle\BartacusBundle\Command\PrepareWebDirCommand" public="true">
            <argument>%bartacus.paths.web_dir%</argument>
            <argument type="service" id="filesystem" />
            <tag name="console.command" />
        </service>

        <service id="Bartacus\Bundle\BartacusBundle\Config\ConfigLoader" public="true">
            <argument type="service" id="Bartacus\Bundle\BartacusBundle\ContentElement\ContentElementConfigLoader" />
        </service>

        <service id="Bartacus\Bundle\BartacusBundle\ContentElement\Renderer">
            <argument type="service" id="request_stack" />
            <argument type="service" id="http_kernel" />
            <argument type="service" id="router_listener" />
            <argument type="service" id="controller_resolver" />
            <argument type="service" id="typo3.frontend_controller" />
            <argument type="service" id="argument_resolver" />
            <tag name="bartacus.typoscript" />
        </service>

        <service id="Bartacus\Bundle\BartacusBundle\EventListener\ContentObjectListener">
            <argument type="service" id="typo3.frontend_controller" />
            <tag name="kernel.event_listener" event="kernel.request" priority="8" />
        </service>

        <service id="Bartacus\Bundle\BartacusBundle\TypoScript\UserFuncCollector" public="true" />
    </services>
</container>
